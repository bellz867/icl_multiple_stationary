\begin_layout Standard
points in current frame
\begin_inset Formula 
\[
\underline{p}_{i/c}=\underline{p}_{k/c}+R_{k/c}\underline{p}_{i/k}
\]

\end_inset

implies
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underline{u}_{i/c}d_{i/c}=\underline{u}_{k/c}d_{k/c}+R_{k/c}\underline{u}_{i/k}d_{i/k}
\]

\end_inset

and
\begin_inset Formula 
\[
\underline{u}_{i/c}d_{i/c}-\underline{u}_{k/c}d_{k/c}=R_{k/c}\underline{u}_{i/k}d_{i/k}
\]

\end_inset


\begin_inset Formula 
\[
\begin{bmatrix}\underline{u}_{i/c} & -\underline{u}_{k/c}\end{bmatrix}\begin{bmatrix}d_{i/c}\\
d_{k/c}
\end{bmatrix}=R_{k/c}\underline{u}_{i/k}d_{i/k}
\]

\end_inset


\begin_inset Formula 
\[
\begin{bmatrix}\underline{u}_{i/c} & -\underline{u}_{k/c}\end{bmatrix}^{T}\begin{bmatrix}\underline{u}_{i/c} & -\underline{u}_{k/c}\end{bmatrix}\begin{bmatrix}d_{i/c}\\
d_{k/c}
\end{bmatrix}=\begin{bmatrix}\underline{u}_{i/c} & -\underline{u}_{k/c}\end{bmatrix}^{T}R_{k/c}\underline{u}_{i/k}d_{i/k}
\]

\end_inset


\begin_inset Formula 
\[
\begin{bmatrix}\underline{u}_{i/c} & -\underline{u}_{k/c}\end{bmatrix}^{T}=\begin{bmatrix}\underline{u}_{i/c}^{T}\\
-\underline{u}_{k/c}^{T}
\end{bmatrix}
\]

\end_inset


\begin_inset Formula 
\[
\begin{bmatrix}\underline{u}_{i/c}^{T}\\
-\underline{u}_{k/c}^{T}
\end{bmatrix}\begin{bmatrix}\underline{u}_{i/c} & -\underline{u}_{k/c}\end{bmatrix}\begin{bmatrix}d_{i/c}\\
d_{k/c}
\end{bmatrix}=\begin{bmatrix}\underline{u}_{i/c}^{T}\\
-\underline{u}_{k/c}^{T}
\end{bmatrix}R_{k/c}\underline{u}_{i/k}d_{i/k}
\]

\end_inset


\begin_inset Formula 
\[
\begin{bmatrix}\underline{u}_{i/c}^{T}\underline{u}_{i/c} & -\underline{u}_{i/c}^{T}\underline{u}_{k/c}\\
-\underline{u}_{i/c}^{T}\underline{u}_{k/c} & \underline{u}_{k/c}^{T}\underline{u}_{k/c}
\end{bmatrix}\begin{bmatrix}d_{i/c}\\
d_{k/c}
\end{bmatrix}=\begin{bmatrix}\underline{u}_{i/c}^{T}\\
-\underline{u}_{k/c}^{T}
\end{bmatrix}R_{k/c}\underline{u}_{i/k}d_{i/k}
\]

\end_inset


\begin_inset Formula 
\[
det\left(\begin{bmatrix}\underline{u}_{i/c}^{T}\underline{u}_{i/c} & -\underline{u}_{i/c}^{T}\underline{u}_{k/c}\\
-\underline{u}_{i/c}^{T}\underline{u}_{k/c} & \underline{u}_{k/c}^{T}\underline{u}_{k/c}
\end{bmatrix}\right)=\underline{u}_{i/c}^{T}\underline{u}_{i/c}\underline{u}_{k/c}^{T}\underline{u}_{k/c}-\underline{u}_{i/c}^{T}\underline{u}_{k/c}\underline{u}_{i/c}^{T}\underline{u}_{k/c}
\]

\end_inset


\begin_inset Formula 
\[
\underline{u}_{i/c}^{T}\underline{u}_{i/c}\underline{u}_{k/c}^{T}\underline{u}_{k/c}=1
\]

\end_inset


\begin_inset Formula 
\[
det\left(\begin{bmatrix}\underline{u}_{i/c}^{T}\underline{u}_{i/c} & -\underline{u}_{i/c}^{T}\underline{u}_{k/c}\\
-\underline{u}_{i/c}^{T}\underline{u}_{k/c} & \underline{u}_{k/c}^{T}\underline{u}_{k/c}
\end{bmatrix}\right)=1-\underline{u}_{i/c}^{T}\underline{u}_{k/c}\underline{u}_{i/c}^{T}\underline{u}_{k/c}
\]

\end_inset


